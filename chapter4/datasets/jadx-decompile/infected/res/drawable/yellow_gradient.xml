<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#fff3ae1b" />
            <stroke android:width="1dp" android:color="#ffbb6008" />
            <corners android:radius="5dp" />
            <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#fff3ae1b" android:endColor="#ffbb6008" android:angle="270.0" />
            <stroke android:width="1dp" android:color="#ffbb6008" />
            <corners android:radius="5dp" />
            <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
        </shape>
    </item>
</selector>
